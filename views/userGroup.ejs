<!DOCTYPE html>
<html lang="tr">

<head>
    <%- include ./partials/head.ejs %>
</head>

<body class="skin-red fixed sidebar-mini">
<div class="wrapper">
    <%- include ./partials/header.ejs %>

    <%- include ./partials/sidebar.ejs%>
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Grup Ekle - Kullanıcı Gruplandır
            </h1>
            <ol class="breadcrumb">
                <li><a href="/"><i class="fa fa-dashboard"></i> Anasayfa</a></li>
                <li><a href="/userGroup">Grup Ekle - Kullanıcı Gruplandır</a></li>
            </ol>
        </section>

        <section class="content">
            <% if(user.local.userRole === 'Administrator'){ %>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Grup Ekle</h3>
                        </div>
                        <div class="register-box">
                            <form role="form" id="formSignup" enctype="multipart/form-data">
                                <div class="form-group has-feedback">
                                    <input type="text" class="form-control" placeholder="Grup Adı" name="groupName" id="inputGroupName">
                                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                                </div>
                                <div class="form-group has-feedback">
                                    <select name="projectManager" class="form-control" id="inputProjectManager">
                                        <option disabled selected>Proje Yöneticisi</option>
                                            <% projectManRes.forEach(function(projectMan){ %>
                                                <option value="<%= projectMan._id %>"><%= projectMan.name %> <%= projectMan.surname %></option>
                                            <%});%>
                                    </select>
                                </div>
                                <div class="row">
                                    <!-- /.col -->
                                    <div class="box-footer">
                                        <button type="button" class="btn btn-primary btn-block btn-flat addGroup-btn">Kaydet</button>
                                    </div>
                                    <!-- /.col -->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
            <% } %>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Kullanıcı Gruplandır</h3>
                        </div> 
                        <div class="register-box">
                            <div class="register-box">
                                <form role="form" id="formSignup" enctype="multipart/form-data">
                                    <div class="form-group has-feedback">
                                        <select name="groupId" class="form-control" id="groups">
                                            <option disabled selected>Grup Seç</option>
                                            <% userGroupRes.forEach(function(userGroup){ %>
                                                <option value="<%= userGroup._id %>"><%= userGroup.name %></option>
                                            <%});%>
                                        </select>
                                    </div>
                                    <div class="form-group has-feedback">
                                        <select name="userRole" class="form-control userRole" id="userRoleID">
                                            <option disabled selected>Mevki Seç</option>
                                            <option value="Controller">Denetmen</option>
                                            <option value="ProofReader">Düzeltmen</option>
                                            <option value="Translator">Çevirmen</option>
                                        </select>
                                    </div>
                                    <div class="form-group has-feedback">
                                        <select name="userId[]" class="form-control select2" multiple="multiple" data-placeholder="Kullanıcı Seç" id="rolledUser">
                                        </select>
                                    </div>
                                    <div class="row">
                                        <!-- /.col -->
                                        <div class="box-footer">
                                            <button type="button" class="btn btn-primary btn-block btn-flat groupUser-btn">Kaydet</button>
                                        </div>
                                        <!-- /.col -->
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </section>
    </div>
    <%- include ./partials/footer.ejs%>
</div>
<!-- jQuery 3 -->
<script src="bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- FastClick -->
<script src="bower_components/fastclick/lib/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="dist/js/adminlte.min.js"></script>
<!-- Sparkline -->
<script src="bower_components/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
<!-- jvectormap  -->
<script src="plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
<script src="plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
<!-- SlimScroll -->
<script src="bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- ChartJS -->
<script src="bower_components/chart.js/Chart.js"></script>
<!-- Select2 -->
<script src="../../bower_components/select2/dist/js/select2.full.min.js"></script>
<!-- My Javascript -->
<script src="dist/js/myJavaScript.js"></script>
<script>$('.select2').select2();</script>
</body>

</html>
